{% extends 'base.html.twig' %}

{% block title %}Hello StatController!{% endblock %}

{% block body %}

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-lg-2">
                <input type="button" onclick="location.href='?month={{ previousMonth }}';" value="Précédent" />
                <input value="{{ month }}" type="datetime-local" />
                <input type="button" onclick="location.href='?month={{ nextMonth }}';" value="Suivant" />
            </div>
            <div class="col-lg-10">
                <div class="example-wrapper">
                    {% if stat1|length > 2 %}
                        <canvas id="st1" height="40vh" width="80vw" data-stat="{{ stat1 }}"></canvas>
                        <canvas id="st2" height="40vh" width="80vw" data-stat="{{ stat2 }}"></canvas>
                        <canvas id="st5" height="40vh" width="80vw" data-stat="{{ stat5 }}"></canvas>
                    {% else %}
                        <h2>Aucun données, merci de changer de mois</h2>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('stat') }}
{% endblock %}
