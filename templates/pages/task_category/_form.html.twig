{{ form_start(form) }}
<div class="bg-white shadow-sm rounded px-4 pt-4 mb-4">
    <div class="row">
        <div class="col-md-3 mb-3">
            {{ form_row(form.name) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.color) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.isRemote) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.isPhysical) }}
        </div>
    </div>
</div>
{{ form_rest(form) }}
<div class="d-flex justify-content-between">
    <a href="{{ path('task_category.index') }}" class="btn btn-secondary"><i class="fas fa-long-arrow-alt-left"></i></a>
    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
