{{ form_start(form) }}
<div class="row">
    <div class="col-md-3 mb-3">
        {{ form_row(form.firstname) }}
    </div>
    <div class="col-md-3 mb-3">
        {{ form_row(form.lastname) }}
    </div>
    <div class="col-md-3 mb-3">
        {{ form_row(form.password) }}
    </div>
    <div class="col-md-3 mb-3">
        {{ form_row(form.birthDate) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4 mb-3">
        {{ form_row(form.email) }}
    </div>
    <div class="col-md-4 mb-3">
        {{ form_row(form.phone) }}
    </div>
    <div class="col-md-4 mb-3">
        {{ form_row(form.hiringDate) }}
    </div>
</div>
<div class="row">
    <div class="col-md-3 mb-3">
        {{ form_row(form.isExecutive) }}
    </div>
    <div class="col-md-3 mb-3">
        {{ form_row(form.isAdmin) }}
    </div>
    <div class="col-md-3 mb-3">
        {{ form_row(form.job) }}
    </div>
</div>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}
