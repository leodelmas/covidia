{{ form_start(form) }}
<div class="bg-white shadow-sm rounded px-4 pt-4 mb-4">
    <div class="row">
        <div class="col-md-3 mb-3">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.lastname) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.password) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.birthDate) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.phone) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.hiringDate) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.imageFile) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 mb-3">
            {{ form_row(form.isExecutive) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.isAdmin) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.isPsychologist) }}
        </div>
        <div class="col-md-3 mb-3">
            {{ form_row(form.job) }}
        </div>
    </div>
</div>
{{ form_rest(form) }}
<div class="d-flex justify-content-between">
    <a href="{{ path('user.index') }}" class="btn btn-secondary"><i class="fas fa-long-arrow-alt-left"></i></a>
    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
