{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="h4 mb-2">Profil</h1>
            <div class="row d-flex justify-content-center">
                <div class="col-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-primary user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25"><img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"></div>
                                    <h6 class="f-w-600">{{ user.firstname }} {{ user.lastname }}</h6>
                                    <p>{{ user.job.name }}{% if user.isExecutive %} - Cadre{% endif %}{% if user.isAdmin %} - Admin{% endif %}</p>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Coordonnées</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">E-mail</p>
                                            <h6 class="text-muted f-w-400">{{ user.email }}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Téléphone</p>
                                            <h6 class="text-muted f-w-400">{{ user.phone }}</h6>
                                        </div>
                                    </div>
                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Informations</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Anniversaire</p>
                                            <h6 class="text-muted f-w-400">{{ user.birthDate|date('d/m/Y') }}</h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Embauche</p>
                                            <h6 class="text-muted f-w-400">{{ user.hiringDate|date('d/m/Y') }}</h6>
                                        </div>
                                    </div>
                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Statistiques</h6>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <p class="text-muted m-b-10 f-w-600">Récapitulatif cumulé des tâches effectuées par le salarié ce mois-ci</p>
                                            {% if stat3|length > 0 %}
                                                <table class="table">
                                                    <thead>
                                                    <tr>
                                                        {% for tcateg in tcategs %}
                                                            <th scope="col">{{ tcateg.name }}</th>
                                                        {% endfor %}
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for user, heureCategs in stat3['data'] %}
                                                        <tr>
                                                            {% for tcateg in tcategs %}
                                                                <td>{{ heureCategs[tcateg.id] }}</td>
                                                            {% endfor %}
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            {% else %}
                                                <p class="text-muted">Pas de données pour le moment</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
{% endblock %}
