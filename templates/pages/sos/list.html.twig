{% extends 'base.html.twig' %}

{% block title %}Sos{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="h4 mb-2">Sos</h1>
        {{ include('pages/_partials/messages.html.twig') }}
        <table class="table table-striped table-borderless bg-white shadow-sm rounded">
            <thead>
            <tr>
                <th>Id</th>
                <th>Personnel</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sos in soss %}
                <tr>
                    <td>{{ sos.id }}</td>
                    {% if sos.isAnonymous == 1 %}
                        <td>Anonyme</td>
                    {% else %}
                        <td>{{ sos.user.firstname }} {{ sos.user.lastname }}</td>
                    {% endif %}
                    <td>{{ sos.message }}</td>
                    <td>
                        <form method="POST" action="{{ path('sos.close', {id: sos.id}) }}"
                              style="display: inline-block"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir fermer ce SOS ?')">
                            <input type="hidden" name="_method" value="CLOSE">
                            <input type="hidden" name="_token" value="{{ csrf_token('close' ~ sos.id) }}">
                            <button class="btn btn-success"><i class="fas fa-check"></i></button>
                        </form>
                        <form method="POST" action="{{ path('sos.delete', {id: sos.id}) }}"
                              style="display: inline-block"
                              onsubmit="return confirm('Êtes-vous sûr de supprimer ce SOS ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sos.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun Sos</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <div class="pagination">
                {{ knp_pagination_render(soss) }}
            </div>
        </div>
    </div>
{% endblock %}

